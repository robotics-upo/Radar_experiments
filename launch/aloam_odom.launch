<launch>
    
    <arg name="init_frame"  default="odom" />
    <arg name="laser_odom_frame"  default="base_link"/>
    <param name="scan_line" type="int" value="16" />

    <!-- if 1, do mapping 10 Hz, if 2, do mapping 5 Hz. Suggest to use 1, it will adjust frequence automaticlly -->
    <param name="mapping_skip_frame" type="int" value="1" />

    <!-- remove too closed points -->
    <param name="minimum_range" type="double" value="0.8"/>

    <param name="mapping_line_resolution" type="double" value="0.2"/>
    <param name="mapping_plane_resolution" type="double" value="0.4"/>

    <node pkg="aloam_velodyne" type="ascanRegistration" name="ascanRegistration">
        <param name="init_frame" value="$(arg init_frame)"/>
    </node>

    <node pkg="aloam_velodyne" type="alaserOdometry" name="alaserOdometry">
        <param name="init_frame" value="$(arg init_frame)"/>
        <param name="laser_odom_frame" value="$(arg laser_odom_frame)" />

    </node>

    <node pkg="odom_to_tf" name="aloam_odom_to_tf" type="odom_to_tf.py" output="screen">
        <remap from="odom" to="/laser_odom_to_init"/>
        <remap from="imu" to="/nix/imu"/>

        <param name="~odom_frame_id" value="$(arg init_frame)"/>
        <param name="~base_frame_id" value="$(arg laser_odom_frame)"/>
        <!-- <param name="~laser_frame" value="os1_sensor"/> -->

        <param name="overridestamp" value="false"/>
        <param name="rotate_90" value="true"/>
    </node>
</launch>
