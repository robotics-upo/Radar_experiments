<launch>
    
    <arg name="only_odometry" default="false"/>
    <arg name="init_frame"  default="odom" />
    <arg name="laser_odom_frame"  default="os1_sensor"/>

    <param name="use_sim_time" value="true"/>
    <arg name="bag_name" default="aspen_run0"/>
    <arg name="bag_file" default="$(env HOME)/ColoRadarDataset/$(arg bag_name).bag"/>
    <node name="bag_player" pkg="rosbag" type="play" args="$(arg bag_file) --clock" output="screen">
        <remap from="/tf" to ="/tf_useless"/>
        <remap from="/tf_static" to ="/tf_static_useless"/>
    </node>

    <!-- <node name="tf_test" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 base_link os1_lidar 10"/> -->
    <!-- <node name="tf_test2" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 aft_mapped base_link 10"/> -->

    <param name="scan_line" type="int" value="16" />

    <!-- if 1, do mapping 10 Hz, if 2, do mapping 5 Hz. Suggest to use 1, it will adjust frequence automaticlly -->
    <param name="mapping_skip_frame" type="int" value="1" />

    <!-- remove too closed points -->
    <param name="minimum_range" type="double" value="0.8"/>

    <param name="mapping_line_resolution" type="double" value="0.2"/>
    <param name="mapping_plane_resolution" type="double" value="0.4"/>

    <arg name="point_topic" default="/os1_cloud_node/points"/>

    <node pkg="aloam_velodyne" type="ascanRegistration" name="ascanRegistration">
        <param name="init_frame" value="$(arg init_frame)" if="$(arg only_odometry)"/>
        <param name="transform_to_baselink" value="false" />
        <param name="POS_LIDAR" value="1"/>
        <remap from="/os1_cloud_node/points_non_dense" to="$(arg point_topic)"/>
    </node>

    <node pkg="aloam_velodyne" type="alaserOdometry" name="alaserOdometry">
        <param name="init_frame" value="$(arg init_frame)" if="$(arg only_odometry)"/>
        <param name="laser_odom_frame" value="$(arg laser_odom_frame)" if="$(arg only_odometry)"/>

    </node>

    <node pkg="aloam_velodyne" type="alaserMapping" name="alaserMapping" unless="$(arg only_odometry)"/>

    <node pkg="odom_to_tf" name="aloam_odom_to_tf" type="odom_to_tf.py" if="$(arg only_odometry)">
        <remap from="odom" to="/laser_odom_to_init"/>
        <remap from="imu" to="/nix/filter_imu"/>

        <param name="~odom_frame_id" value="$(arg init_frame)"/>
        <param name="~base_frame_id" value="$(arg laser_odom_frame)"/>
        <param name="~laser_frame" value="os1_sensor"/>

        <param name="overridestamp" value="false"/>
        <param name="rotate_90" value="$(arg only_odometry)"/>
    </node>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find radar_experiments)/rviz/aloam.rviz"/>
</launch>
